<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="@string/last_run_failed" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_delete_result"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_blue_bg"
            android:text="@string/delete"
            android:textColor="@drawable/btn_words_color" />

        <Button
            android:id="@+id/button_upload_result"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_green_bg"
            android:text="@string/upload"
            android:textColor="@drawable/btn_words_color" />
        
        <Button
            android:id="@+id/button_continue_last"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_red_bg"
            android:text="@string/continue_last"
            android:textColor="@drawable/btn_words_color" />
        
    </LinearLayout>

</RelativeLayout>