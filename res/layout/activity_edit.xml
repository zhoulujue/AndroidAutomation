<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditActivity" >

    <com.michael.words.EditTextView
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_start"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/button_start"
        android:text="@string/pause" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:text="@string/start" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_start"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/button_start"
        android:text="@string/delete" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_start" >

        <TextView
            android:id="@+id/textView_cur_count_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cur_count_start" />

        <TextView
            android:id="@+id/textView_cur_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cur_count" />

        <TextView
            android:id="@+id/textView_cur_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cur_count_end" />
    </LinearLayout>

</RelativeLayout>